<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/indoor_frag"
    tools:context=".ui.record.RecordIndoorFragment">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hello!"
                android:gravity="center"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="56dp"> <!-- this margin for bottom nav bar-->

        <!-- Background Image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="indoorOutdoorChoice"
            app:tint="@color/black"
            android:scaleY="-1"
            android:src="@drawable/rectangle_record"/> <!-- scaleY=-1 to flip the image -->

        <!-- Buttons Positioned Over the Image -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/outdoorbtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Outdoor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/indoorbtn"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:backgroundTint="#999999"/>

            <Button
                android:id="@+id/indoorbtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Indoor"
                app:layout_constraintStart_toEndOf="@id/outdoorbtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:backgroundTint="#999999"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>